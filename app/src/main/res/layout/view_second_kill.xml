<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/app_limit_buy_begin"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:text="10点场"/>

    <cn.iwgang.countdownview.CountdownView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/cv_countdownViewTest1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv"
        app:isHideTimeBackground="false"
        app:isShowDay="false"
        app:isShowHour="true"
        app:isShowMillisecond="false"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:isShowTimeBgBorder="true"
        app:isTimeTextBold="true"
        app:suffixGravity="center"
        app:suffixHour=":"
        app:suffixMinute=":"
        app:timeBgBorderColor="#564249"
        app:timeTextColor="#000000"
        app:timeTextSize="16sp"
        />

    <TextView
        android:id="@+id/tv_second_kill"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/axd"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:drawablePadding="6dp"
        android:textColor="#ff0000"
        android:text="我已习惯有你"/>

</RelativeLayout>