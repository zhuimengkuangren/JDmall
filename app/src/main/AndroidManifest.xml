<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.shopping.app.jdmall">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".ui.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.TutorialActivity"/>
        <activity android:name=".ui.activity.MainActivity"/>

        <activity android:name=".ui.activity.FlashSaleActivity"/>

        <activity android:name=".ui.activity.QueryCargoActivity"></activity>
        <activity android:name=".ui.activity.DetailListItemActivity"></activity>

    </application>

</manifest>