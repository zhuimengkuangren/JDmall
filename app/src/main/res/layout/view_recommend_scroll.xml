<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_1"/>

        <ImageView
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_2"/>

        <ImageView
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_3"/>

        <ImageView
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_4"/>

        <ImageView
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_5"/>

        <ImageView
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/recommend_brand_6"/>

    </LinearLayout>

</HorizontalScrollView>