<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/amk"
             >

    <com.shopping.app.jdmall.widget.CargoBuyInfoView
        android:gravity="center_vertical"
        android:id="@+id/cargo_buy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/size_middle"/>


    <RelativeLayout
        android:padding="@dimen/size_middle"
        android:background="@drawable/amk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/tv_address"
            style="@style/textViewStyle"
            android:text="进口税(含运费税款)"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="¥ 2.27"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:padding="@dimen/size_middle"
        android:background="@drawable/amk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
      >

        <TextView
            android:id="@+id/tv_method"
            style="@style/textViewStyle"
            android:text="配送方式"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="运费 免邮"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/amk"
        android:layout_width="match_parent"
        android:layout_height="60sp"
       android:padding="@dimen/size_middle">

        <TextView
            android:id="@+id/tv_pay"
            style="@style/textViewStyle"
            android:text="运费险"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="卖家已为运费和进口税投保,最高赔付80元"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:padding="@dimen/size_middle"
        android:background="@drawable/amk"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/tv_buy_say"
            style="@style/textViewStyle"
            android:text="买家留言"
            />

        <EditText
            android:background="@drawable/bg_search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:hint="选填:对本次交易的说明(建议填写)"
            android:maxLines="1"
            android:textSize="14sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:padding="@dimen/size_middle"
        android:background="@drawable/amk"
        android:id="@+id/info_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="小计: ¥ 22.27"/>

        <TextView
            android:layout_marginRight="@dimen/size_middle"
            style="@style/textViewStyle"
            android:layout_toLeftOf="@id/tv_count"
            android:text="共一件商品"
            />

    </RelativeLayout>





</LinearLayout>