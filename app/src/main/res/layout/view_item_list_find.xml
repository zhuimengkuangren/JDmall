<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_findfragment"
            android:layout_marginTop="5dp"
            android:text="名字"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_market_price_findfragment"
            android:layout_marginTop="5dp"
            android:text="市场价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_actual_price_findfragment"
            android:layout_marginTop="5dp"
            android:text="实际价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/button_buy_selector"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:text="立即购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_item_list_find"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_item_findfragmen"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/default_image"
        />
</RelativeLayout>