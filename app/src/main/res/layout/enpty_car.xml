<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_enpty_car"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#BBBBBB"
              android:visibility="gone"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/iv_empty"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/gouwuchewujieguo_tubiao"
            />

        <TextView
            android:id="@+id/tv_empty_car_tobuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_rec_textview"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="去逛逛"
            android:textColor="#ed3f3f"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_above="@+id/tv_empty_car_tobuy"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车空空如也"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="来挑几件好货吧!"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>