<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--<android.support.design.widget.TabLayout

           >

       </android.support.design.widget.TabLayout>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_find_listitem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_find"
                android:layout_width="match_parent"
                android:layout_height="160dp">

            </android.support.v4.view.ViewPager>

            <com.shopping.app.jdmall.widget.FindDetailInfoView
                android:id="@+id/info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.shopping.app.jdmall.widget.FindDetailInfoView>

            <com.shopping.app.jdmall.widget.FindDetailTalkView
                android:id="@+id/talk_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.shopping.app.jdmall.widget.FindDetailTalkView>

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>

        </LinearLayout>


    </ScrollView>

</LinearLayout>